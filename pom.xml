<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.mtn.training</groupId>
    <artifactId>ci-training-lazarev</artifactId>
    <packaging>jar</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>maven-task</name>
	<dependencies>
        <dependency>
            <groupId>org.junit.Test</groupId>
            <artifactId>Test</artifactId>
            <version>4.4</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <scope>compile</scope>
		</dependency>
    </dependencies>
	<build>
        <outputDirectory>module3/maven-task</outputDirectory>
        <finalName>MavenTask</finalName>
        <sourceDirectory>module3/maven-task/src/main/java</sourceDirectory>
		<resources>
            <resource>
                <directory>module3/maven-task/src/resources</directory>
